---
const steps = [
    {
        num: 1,
        title: "IDEA",
        sub: "Validación de Mercado",
        desc: "Analizamos y refinamos tu concepto para asegurar su viabilidad comercial antes de invertir tiempo en desarrollo.",
    },
    {
        num: 2,
        title: "MVP",
        sub: "Desarrollo Enfocado",
        desc: "Construimos exactamente lo necesario para validar tu propuesta con el mercado y aprender de tus primeros usuarios.",
    },
    {
        num: 3,
        title: "LANZAMIENTO",
        sub: "Go-to-Market Estratégico",
        desc: "Diseñamos tu estrategia de entrada al mercado para generar tracción desde el día uno.",
    },
    {
        num: 4,
        title: "ESCALA",
        sub: "Crecimiento Sostenible",
        desc: "Implementamos sistemas de growth y optimizamos operaciones para asegurar rentabilidad mientras creces.",
    },
];
---

<section class="process">
    <div class="container">
        <h2>
            Nuestro proceso para crear <span class="text-green"
                >software de alto valor.</span>
        </h2>
        <div class="steps">
            {
                steps.map((step) => (
                    <div class="step">
                        <div class="circle">{step.num}</div>
                        <h3>{step.title}</h3>
                        <span class="sub">{step.sub}</span>
                        <p>{step.desc}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .process {
        padding: 100px 0;
        text-align: center;
    }

    h2 {
        margin-bottom: 80px;
        font-size: 2.2rem;
    }

    .steps {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        position: relative;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        padding: 0 10px;
    }

    /* connecting line */
    .steps::before {
        content: "";
        position: absolute;
        top: 25px;
        left: 12%;
        right: 12%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(74, 222, 128, 0.3) 50%,
            transparent
        );
        z-index: 0;
    }

    .circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--bg-dark);
        border: 1px solid var(--primary-green);
        box-shadow: 0 0 15px rgba(74, 222, 128, 0.2);
        color: var(--primary-green);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 25px;
        z-index: 1;
    }

    h3 {
        font-size: 1.1rem;
        font-weight: 800;
        letter-spacing: 1px;
        margin-bottom: 5px;
        color: var(--text-white);
    }

    .sub {
        font-size: 0.9rem;
        color: var(--primary-green);
        margin-bottom: 15px;
        font-weight: 600;
    }

    p {
        font-size: 0.85rem;
        color: var(--text-gray);
        line-height: 1.5;
    }

    @media (max-width: 900px) {
        .steps {
            grid-template-columns: 1fr 1fr;
            gap: 50px;
        }
        .steps::before {
            display: none;
        }
    }
    @media (max-width: 500px) {
        .steps {
            grid-template-columns: 1fr;
        }
    }
</style>
