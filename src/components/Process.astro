const steps = [
    { num: 1, title: "IDEA", desc: "Traes una idea con potencial real." },
    {
        num: 2,
        title: "SISTEMA",
        desc: "La estructuramos en BusinessOS: mercado, propuesta, MVP y m√©tricas.",
    },
    {
        num: 3,
        title: "EJECUCI√ìN",
        desc: "El proyecto entra en LanzaSaaS LAB y se construye con equipo real.",
    },
    { num: 4, title: "MERCADO", desc: "Se lanza, se mide y se valida." },
    {
        num: 5,
        title: "DECISI√ìN",
        desc: "Escalamos lo que funciona. Matamos r√°pido lo que no.",
    },
];
---

<section class="process">
    <div class="container">
        <h2>üîÅ C√≥mo funciona el proceso</h2>
        <div class="steps-wrapper">
            <div class="steps">
                {
                    steps.map((step) => (
                        <div class="step">
                            <div class="circle">{step.num}</div>
                            <h3>{step.title}</h3>
                            <p>{step.desc}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .process {
        padding: 100px 0;
        text-align: center;
    }

    h2 {
        margin-bottom: 60px;
        font-size: 2.2rem;
    }

    .steps-wrapper {
        position: relative;
    }

    .steps {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        position: relative;
    }

    /* Connecting line */
    .steps::before {
        content: "";
        position: absolute;
        top: 25px;
        left: 50px;
        right: 50px;
        height: 2px;
        background: rgba(255, 255, 255, 0.1);
        z-index: 0;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        flex: 1;
    }

    .circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--bg-dark);
        border: 1px solid var(--primary-green);
        color: var(--primary-green);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 20px;
        z-index: 1;
    }

    h3 {
        font-size: 0.95rem;
        font-weight: 800;
        letter-spacing: 1px;
        margin-bottom: 10px;
        color: var(--text-white);
    }

    p {
        font-size: 0.85rem;
        color: var(--text-gray);
        line-height: 1.4;
        max-width: 180px;
    }

    @media (max-width: 900px) {
        .steps {
            flex-direction: column;
            gap: 40px;
            align-items: flex-start;
        }
        .steps::before {
            top: 0;
            bottom: 0;
            left: 25px;
            width: 2px;
            height: auto;
            right: auto;
        }
        .step {
            flex-direction: row;
            gap: 20px;
            text-align: left;
        }
        .circle {
            margin-bottom: 0;
            flex-shrink: 0;
        }
        h3 {
            margin-bottom: 5px;
        }
        p {
            max-width: 100%;
        }
    }
</style>
