---
// No hay lógica de servidor aquí, todo es cliente
---

<!-- Botón Flotante -->
<button id="chat-launcher" class="chat-launcher" aria-label="Abrir chat">
    <span class="material-symbols-outlined icon-open">chat_bubble</span>
    <span class="material-symbols-outlined icon-close">close</span>
</button>

<!-- Ventana del Chat -->
<div id="chat-window" class="chat-window">
    <div class="chat-header">
        <div class="header-info">
            <span class="material-symbols-outlined">smart_toy</span>
            <div>
                <h3>Asistente LanzaSaaS</h3>
                <span class="status-dot">Online</span>
            </div>
        </div>
    </div>

    <div id="chat-messages" class="chat-messages">
        <!-- Mensaje de bienvenida -->
        <div class="message bot">
            <div class="message-content">
                ¡Hola! Soy el asistente virtual. ¿En qué puedo ayudarte sobre el
                ecosistema LanzaSaaS?
            </div>
        </div>
    </div>

    <form id="chat-form" class="chat-input-area">
        <input
            type="text"
            id="user-input"
            placeholder="Escribe tu pregunta..."
            autocomplete="off"
        />
        <button type="submit" id="send-btn" disabled>
            <span class="material-symbols-outlined">send</span>
        </button>
    </form>
</div>

<script>
    const launcher = document.getElementById("chat-launcher");
    const windowChat = document.getElementById("chat-window");
    const form = document.getElementById("chat-form");
    const input = document.getElementById("user-input") as HTMLInputElement;
    const messagesContainer = document.getElementById("chat-messages");
    const sendBtn = document.getElementById("send-btn") as HTMLButtonElement;

    const sessionId = Math.random().toString(36).substring(7);

    launcher?.addEventListener("click", () => {
        windowChat?.classList.toggle("open");
        launcher.classList.toggle("open");
        if (windowChat?.classList.contains("open")) {
            setTimeout(() => input?.focus(), 100);
        }
    });

    input?.addEventListener("input", () => {
        if (sendBtn) sendBtn.disabled = input.value.trim() === "";
    });

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const message = input.value.trim();
        if (!message) return;

        addMessage(message, "user");
        input.value = "";
        if (sendBtn) sendBtn.disabled = true;

        const loadingId = addLoadingIndicator();

        try {
            const response = await fetch("/api/agent", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ message, sessionId }),
            });

            const data = await response.json();

            removeMessage(loadingId);

            const botReply =
                data.output ||
                data.text ||
                data.message ||
                "Lo siento, no entendí la respuesta.";
            addMessage(botReply, "bot");
        } catch (error) {
            removeMessage(loadingId);
            addMessage(
                "Hubo un error de conexión. Inténtalo de nuevo.",
                "bot error",
            );
        }
    });

    function addMessage(text: string, type: string) {
        const div = document.createElement("div");
        div.className = `message ${type}`;
        div.innerHTML = `<div class="message-content">${text}</div>`;
        messagesContainer?.appendChild(div);
        scrollToBottom();
        return (div.id = "msg-" + Date.now());
    }

    function addLoadingIndicator() {
        const id = "loading-" + Date.now();
        const div = document.createElement("div");
        div.id = id;
        div.className = "message bot loading";
        div.innerHTML = `
            <div class="typing-indicator">
                <span></span><span></span><span></span>
            </div>`;
        messagesContainer?.appendChild(div);
        scrollToBottom();
        return id;
    }

    function removeMessage(id: string) {
        const el = document.getElementById(id);
        if (el) el.remove();
    }

    function scrollToBottom() {
        if (messagesContainer) {
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
    }
</script>

<style>
    :root {
        --chat-primary: #10b981;
        --chat-bg: #18181b;
        --chat-header: #0a0a0a;
        --chat-user-bg: #27272a;
        --chat-text: #ffffff;
    }

    .chat-launcher {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 60px;
        height: 60px;
        background: var(--chat-primary);
        border-radius: 50%;
        border: none;
        color: black;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
        z-index: 9999;
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .chat-launcher:hover {
        transform: scale(1.1);
    }
    .chat-launcher .icon-close {
        display: none;
        font-size: 24px;
    }
    .chat-launcher .icon-open {
        display: block;
        font-size: 24px;
    }

    .chat-launcher.open {
        background: #3f3f46;
        color: white;
        transform: rotate(90deg);
    }
    .chat-launcher.open .icon-open {
        display: none;
    }
    .chat-launcher.open .icon-close {
        display: block;
    }

    .chat-window {
        position: fixed;
        bottom: 7rem;
        right: 2rem;
        width: 350px;
        height: 500px;
        max-height: 80vh;
        background: var(--chat-bg);
        border: 1px solid #27272a;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
        display: flex;
        flex-direction: column;
        z-index: 9998;
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px) scale(0.95);
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        overflow: hidden;
    }

    .chat-window.open {
        opacity: 1;
        visibility: visible;
        transform: translateY(0) scale(1);
    }

    /* Header */
    .chat-header {
        background: var(--chat-header);
        padding: 1rem;
        border-bottom: 1px solid #27272a;
    }
    .header-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    .header-info span {
        color: var(--chat-primary);
        font-size: 1.5rem;
    }
    .header-info h3 {
        margin: 0;
        font-size: 1rem;
        color: white;
        font-family: var(--font-display);
    }
    .status-dot {
        font-size: 0.7rem;
        color: #a1a1aa;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }
    .status-dot::before {
        content: "";
        width: 6px;
        height: 6px;
        background: var(--chat-primary);
        border-radius: 50%;
    }

    /* Área de mensajes */
    .chat-messages {
        flex: 1;
        padding: 1rem;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .message {
        max-width: 85%;
        display: flex;
        flex-direction: column;
    }

    .message.bot {
        align-self: flex-start;
    }
    .message.user {
        align-self: flex-end;
    }

    .message-content {
        padding: 0.75rem 1rem;
        border-radius: 1rem;
        font-size: 0.9rem;
        line-height: 1.5;
        word-wrap: break-word;
    }

    .message.bot .message-content {
        background: #27272a;
        color: #e4e4e7;
        border-top-left-radius: 0;
    }

    .message.user .message-content {
        background: var(--chat-primary);
        color: black;
        font-weight: 500;
        border-bottom-right-radius: 0;
    }

    .message.error .message-content {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 1px solid #ef4444;
    }

    /* Typing Indicator */
    .typing-indicator {
        display: flex;
        gap: 4px;
        padding: 0.5rem;
    }
    .typing-indicator span {
        width: 6px;
        height: 6px;
        background: #71717a;
        border-radius: 50%;
        animation: bounce 1.4s infinite ease-in-out both;
    }
    .typing-indicator span:nth-child(1) {
        animation-delay: -0.32s;
    }
    .typing-indicator span:nth-child(2) {
        animation-delay: -0.16s;
    }
    @keyframes bounce {
        0%,
        80%,
        100% {
            transform: scale(0);
        }
        40% {
            transform: scale(1);
        }
    }

    /* Input Area */
    .chat-input-area {
        padding: 1rem;
        border-top: 1px solid #27272a;
        display: flex;
        gap: 0.5rem;
        background: var(--chat-header);
    }

    .chat-input-area input {
        flex: 1;
        background: #18181b;
        border: 1px solid #3f3f46;
        border-radius: 99px;
        padding: 0.6rem 1rem;
        color: white;
        font-family: inherit;
        font-size: 0.9rem;
        outline: none;
    }
    .chat-input-area input:focus {
        border-color: var(--chat-primary);
    }

    .chat-input-area button {
        background: transparent;
        color: var(--chat-primary);
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        transition: 0.2s;
    }
    .chat-input-area button:disabled {
        color: #52525b;
        cursor: not-allowed;
    }
    .chat-input-area button:not(:disabled):hover {
        transform: scale(1.1);
    }

    @media (max-width: 480px) {
        .chat-window {
            width: 100%;
            height: 100%;
            max-height: 100vh;
            bottom: 0;
            right: 0;
            border-radius: 0;
        }
    }
</style>
