                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    .target {
        padding: 80px 0;
        background: #050a08;
    }

    .target-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
    }

    .col {
        padding: 40px;
        border-radius: 16px;
    }

    .col-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
    }

    .icon-target {
        width: 32px;
        height: 32px;
        color: var(--primary-green);
    }

    .icon-ban {
        width: 32px;
        height: 32px;
        color: var(--accent-red);
    }

    .col.yes {
        background: rgba(74, 222, 128, 0.03);
        border: 1px solid rgba(74, 222, 128, 0.1);
    }

    .col.no {
        background: rgba(239, 68, 68, 0.03);
        border: 1px solid rgba(239, 68, 68, 0.1);
    }

    h3 {
        margin: 0;
        font-size: 1.3rem;
    }

    ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    li {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .yes li {
        color: var(--text-white);
    }
    .no li {
        color: var(--text-gray);
    }

    .icon-check {
        width: 18px;
        height: 18px;
        color: var(--primary-green);
        flex-shrink: 0;
    }
    .icon-x {
        width: 18px;
        height: 18px;
        color: var(--accent-red);
        flex-shrink: 0;
    }

    @media (max-width: 768px) {
        .target-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
