<style>
    footer {
        position: relative;
        padding: 60px 0;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        overflow: hidden;
        background: var(--bg-dark);
    }

    .footer-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.85rem;
        color: #52525b;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--text-white);
        font-weight: 700;
        font-size: 1rem;
    }

    .icon {
        width: 20px;
        height: 20px;
        color: var(--text-white);
    }

    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }
