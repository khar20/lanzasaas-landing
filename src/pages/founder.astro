<style>
    .text-muted {
        color: var(--text-muted);
    }
    .font-bold {
        font-weight: 700;
    }
    .bg-card-dark {
        background-color: #0d0d0d;
    }
    .mb-6 {
        margin-bottom: 1.5rem;
    }
    .mb-8 {
        margin-bottom: 2rem;
    }
    .mb-10 {
        margin-bottom: 3rem;
    }

    /* Hero */
    .hero-founder {
        padding: 8rem 1.5rem 6rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .bg-grid {
        position: absolute;
        inset: 0;
        background-image: radial-gradient(#27272a 1px, transparent 1px);
        background-size: 30px 30px;
        opacity: 0.2;
        pointer-events: none;
    }

    .badge-role {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid var(--color-primary);
        border-radius: 99px;
        color: var(--color-primary);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        margin-bottom: 1.5rem;
    }

    .hero-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: var(--text-gray);
        font-weight: 400;
        margin-bottom: 2rem;
    }

    .hero-intro {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto 3rem;
    }

    .highlight-box {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 1.5rem 2rem;
        border-radius: var(--radius-lg);
        display: inline-block;
        color: var(--text-gray);
        font-size: 1.1rem;
    }

    /* Tu Rol Grid */
    .icon-large {
        font-size: 3rem;
        margin-bottom: 1rem;
        display: block;
    }

    .role-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin-top: 3rem;
    }

    @media (min-width: 768px) {
        .role-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .role-grid .role-item:last-child {
            grid-column: span 2;
            max-width: 600px;
            margin-inline: auto;
            width: 100%;
        }
    }
    @media (min-width: 1024px) {
        .role-grid {
            grid-template-columns: repeat(3, 1fr);
        }
        .role-grid .role-item:last-child {
            grid-column: auto;
            margin-inline: 0;
        }
    }

    .role-item {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 2rem;
        border-radius: var(--radius-lg);
        text-align: center;
        transition: 0.3s;
    }
    .role-item:hover {
        border-color: var(--color-primary);
        transform: translateY(-5px);
    }
    .role-item span {
        font-size: 2.5rem;
        color: var(--color-primary);
        margin-bottom: 1rem;
        display: block;
    }
    .role-item h3 {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: white;
    }
    .role-item p {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    /* Split Section (Team & Equity) */
    .grid-split {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
        align-items: center;
    }
    @media (min-width: 900px) {
        .grid-split {
            grid-template-columns: 1fr 1fr;
        }
    }

    .team-list {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .team-list li {
        display: flex;
        gap: 1rem;
        align-items: flex-start;
    }

    .icon-box {
        background: rgba(255, 255, 255, 0.05);
        padding: 0.8rem;
        border-radius: var(--radius-md);
        color: var(--color-primary);
    }
    .team-list h4 {
        font-size: 1.1rem;
        color: white;
        margin-bottom: 0.2rem;
    }
    .team-list p {
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .equity-card {
        background: #18181b; /* Zinc 900 */
        border: 1px solid var(--border-color);
        padding: 2rem;
        border-radius: var(--radius-xl);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    .equity-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        color: white;
    }
    .equity-header span {
        font-size: 2rem;
        color: var(--color-primary);
    }

    .chart-row {
        margin-bottom: 1.5rem;
    }
    .chart-label {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        font-weight: 700;
    }
    .progress-bg {
        width: 100%;
        height: 10px;
        background: #27272a;
        border-radius: 99px;
        overflow: hidden;
    }
    .progress-fill {
        height: 100%;
        background: var(--color-primary);
        border-radius: 99px;
    }
    .progress-fill.secondary {
        background: #52525b;
    } /* Zinc 600 */

    /* Benefits */
    .benefits-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    @media (min-width: 600px) {
        .benefits-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    .benefit-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 1.5rem;
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: 0.2s;
    }
    .benefit-card:hover {
        border-color: var(--color-primary);
        background: rgba(16, 185, 129, 0.05);
    }
    .benefit-card span {
        font-size: 2rem;
        color: var(--color-primary);
    }
    .benefit-card h4 {
        font-size: 1.1rem;
        color: white;
    }

    @media (min-width: 768px) {
        .full-width {
            grid-column: span 2;
            justify-content: center;
        }
    }

    /* CTA */
    .bg-gradient-cta {
        background: linear-gradient(
            to top,
            rgba(16, 185, 129, 0.05),
            transparent
        );
    }
    .btn-large {
        font-size: 1.1rem;
        padding: 1rem 2rem;
    }
</style>
