            <div class="section-badge growth-badge">GROWTH TRACK</div>
            <div class="container grid-role reverse">
                <div class="role-visual marketing-visual">
                    <div class="chart-block">
                        <div class="bar-chart">
                            <div class="bar" style="height: 30%"></div>
                            <div class="bar" style="height: 50%"></div>
